#!/bin/sh
#
# Copied from: https://gist.github.com/salman-abedin/6f52c52e465d89d489f9ea8d891c7332
# 
# Launches files based on their mimetypes
# Usage: launch [FILE...]
# Dependencies: file

case $(file --mime-type "$@" -bL) in
   # Check for the mimetype of your file (This is POSIX regex)
   video/* | audio/* | image/gif)
      # Launch using your favorite application
      swallow mpv "$@"
      ;;
   # So on and so forth...
   application/pdf | application/postscript)
      swallow zathura "$@"
      ;;
   # So on and so forth...
   image/* )
      swallow gthumb "$@"
      ;;
   *) exit 1 ;;
esac
